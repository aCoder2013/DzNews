<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.example.song.dznews.ui.RoundedImageView
            android:id="@+id/header_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="18dp"
            android:src="@drawable/header_girl"
            android:layout_above="@+id/header_text_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/header_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/header_email"
            android:gravity="left"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:text="松开你的手"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textColorLight" />

        <TextView
            android:id="@+id/header_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:layout_alignParentBottom="true"
            android:text="aCoder2013@163.com"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/textColorLight"
            />
    </RelativeLayout>


</FrameLayout>